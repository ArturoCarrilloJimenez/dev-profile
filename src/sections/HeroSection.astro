---
import PageHeader from "../components/PageHeader.astro";
import Link from "../components/Link.astro";
import { cn } from "src/utils";
import { Image } from "astro:assets";
import avatar from '../assets/Avatar.png';

const chipText = "WEB DEVELOPER PORTFOLIO"
---

<section class="m-auto w-auto w-max-xl overflow-hidden relative" id="home">
  <div>
    <div class={
    cn(
      "absolute top-0 right-0 w-[133px] h-[133px] translate-x-1/2 translate-y-[-50%] bg-circles-union bg-no-repeat content-['']",
      "lg:hidden")
    }>
    </div>
    <div class={cn("px-3 min-h-screen flex place-items-center", "lg:px-12 lg:pr-0 lg:max-w-[46vw]")}>
      <div class="flex flex-col gap-8">
        <div class="flex flex-col gap-6">
          <div class="h-[23px] lg:hidden">
          </div>
          <PageHeader title="Arturo Carrillo Jimenez" chipText={chipText} isHero={true}>
            <p slot="description">Hola, soy Arturo, desarrollador web con experiencia en <strong>Angular, NestJS, SQL y Node.js</strong>. Me enfoco en el desarrollo full stack y disfruto crear soluciones que aporten valor real.</p>
          </PageHeader>
        </div>
        <div class={cn(
          "flex items-center justify-between",
          "lg:flex-row-reverse lg:gap-8 lg:w-fit"
          )}>
          <ul class="grid grid-cols-1 gap-y-1 gap-x-5 2xl:grid-cols-2">
            <li>
              <Link href="#about">SOBRE MI</Link>
            </li>
            <li>
              <Link href="#projects">MIS PROYECTOS</Link>
            </li>
          </ul>
          <div class={cn("w-[127px] h-[127px] flex-shrink-0 custom-transition", "2xl:w-[84px] 2xl:h-[84px]", "dark:saturate-0")}>
            <Image
              src={avatar}
              alt="Web developer Arturo Carrillo profile"
              format="webp"
              widths={[127, 84]}
              width="127"
              height="127"
              decoding="async"
              fetchpriority="high"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
